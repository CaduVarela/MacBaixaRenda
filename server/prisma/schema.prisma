generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Float
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("product")
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String
  products  Product[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("category")
}

model Status {
  id        Int      @id @default(autoincrement())
  type      String
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("status")
}
